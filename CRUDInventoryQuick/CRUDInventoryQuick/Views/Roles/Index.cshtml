@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Administración de roles";
}

<h1 class="text-center">Administración de roles</h1>

@if(TempData["Correcto"] !=null){
    <div class="alert alert-success alert-dismissible fade show" role="alert">
         @TempData["Correcto"]
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
         </button>
    </div>
}

@if(TempData["Error"] !=null){
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
         @TempData["Error"]
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
         </button>
    </div>
}

<div class="row">
    <div class="col-sm-3 offset-9">
        <a asp-action="Crear" asp-controller="Roles" class="btn btn-primary w-100">Crear Nuevo Rol</a>
    </div>
</div>

<div>
    <div class="col-sm-12">
        <div class= "card border">
            <div class="card-header">
                <h3><strong>Lista de roles</strong></h3>
            </div>
        </div>
        <div class="card-body">
            @*Tabla*@
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="d-lg-table" id="tablaRoles" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                                <tr>
                                    <td width="25%">@Html.DisplayFor(v =>item.Id) </td>
                                    <td width="50%">@Html.DisplayFor(v =>item.Name) </td>
                                    <td width="25%"> 
                                        <div role="group" class="w-60 btn-group">
                                            @*Editar*@
                                            <a class="btn btn-primary" asp-controller="Roles" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                                            @*Borrar*@
                                            @*Revisar borde botones*@
                                            <form asp-controller="Roles" asp-action="Borrar" method="post" asp-route-id=@item.Id>
                                                <button type="submit" onclick="return confirm('Está seguro de borrar este registro?')" class="btn btn-danger">
                                                    Borrar
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No hay registros</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}