<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRUDInventoryQuick</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRUDInventoryQuick.styles.css" asp-append-version="true" />
    @*íconos de bootstrap*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

    @*Control Calendar*@
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
    

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-5" style="background-color:#6610f2;">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index"  ><i class="bi bi-cart3 accordion-body" ></i>Dulce Pooh</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-5">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="AspNetRole" asp-action="Index">Roles</a>

                        </li> 

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Categoria" asp-action="Index">Categoria</a>
                        </li> 

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Precio" asp-action="Index">Precio</a>
                        </li> 

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Producto" asp-action="Index">Producto</a>
                        </li> 
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Subcategoria" asp-action="Index">Subcategoria</a>
                        </li> 

                          <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Marca" asp-action="Index">Marca</a>
                        </li> 



                        @if (User.IsInRole("Administrador "))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Employees" asp-action="Index">Admin Roles</a>
                            </li>

                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CRUDInventoryQuick - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@

    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
      $( function() {
          $("#datepicker").datepicker({
              changeMont: true,
              changeYear: true,
              yearRange: '1940:2020',
              dateFormat:'yy-mm-dd'
          });
      } );
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

