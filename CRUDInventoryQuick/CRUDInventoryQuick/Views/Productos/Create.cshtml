@model Producto

<div class="container box-shadow p-5">
    <div>
        <h2>Agregar Producto</h2>
    </div>

    <form method="post" asp-controller="Productos" asp-action="Create">     
        <div asp-validation-summary=All></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Name">Nombre del Producto:</label>
                <input type="text" class="form-control mb-3" asp-for="Name" placeholder="Ingrese el nombre del Producto" />
                <span asp-validation-for="Name" class="alert-danger"></span>s
            </div>

             <div class="form-group col-md-6">
                <label asp-for="Description">Descripción del Producto:</label>
                <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Ingrese la descripcioón del Producto" />
                <span asp-validation-for="Description" class="alert-danger"></span>
            </div>

             <div class="form-group col-md-6">
                <label asp-for="Estado">D:</label>
                <input type="text" class="form-control mb-3" asp-for="Estado" placeholder="Ingrese el estado del Producto" />
                <span asp-validation-for="Estado" class="alert-danger"></span>
            </div>

            <div class="form-group col-md-6 mb-3">
                <label asp-for="Subcategoria">Fecha de Creación:</label>
                <input type="text" class="form-control" asp-for="Subcategoria" placeholder="Ingrese la Subcategoria del producto"/>
                <span asp-validation-for="Subcategoria" class="alert-danger"></span>
            </div>


            <div class="form-group col-md-6 mb-3">
                <label asp-for="MarcaId">Fecha de Creación:</label>
                <input type="text" class="form-control" asp-for="MarcaId" placeholder="Ingrese el Id de la Marca"/>
                <span asp-validation-for="MarcaId" class="alert-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-lg p-2">
            <i class="bi bi-file-plus-fill"></i>
            Guardar
        </button>
        <a asp-controller="Employees" asp-action="Index" class="btn btn-lg btn-danger p-2">Regresar</a>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}